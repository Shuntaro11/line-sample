.account-page
  .center-box
    %p  TIME
    %h1
      = link_to "HOME", root_path, class: 'btn upbtn'
    %h1
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn upbtn'
    = form_for(current_user) do |f|
      .field-input
        = f.text_field :name, autofocus: true, class: 'form'
        .form__mask
          = f.label :image, class: 'image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'
      .field-input
        = f.email_field :email, class: 'form'
      .field-input
        = f.text_field :content, placeholder:"自己紹介", class: 'form'
      .actions
        = f.submit "保存", class: 'btn lowbtn'