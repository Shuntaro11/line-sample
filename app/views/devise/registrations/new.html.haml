.account-page
  .center-box
    %p TIME
    %h1
      = link_to "ログイン", new_session_path(resource_name), class: 'btn upbtn'
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .field-input
        = f.text_field :name, autofocus: true, placeholder:"名前", class: 'form nameform'
        .form__mask
          = f.label :image, class: 'image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'
      .field-input
        = f.email_field :email, placeholder:"メールアドレス", class: 'form'
      .field-input
        = f.password_field :password, autocomplete: "off", placeholder:"パスワード", class: 'form'
      .field-input
        = f.password_field :password_confirmation, autocomplete: "off", placeholder:"パスワード確認", class: 'form'
      .actions
        = f.submit "登録", class: 'btn lowbtn'